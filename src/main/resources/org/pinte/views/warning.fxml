<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<!--Create the grid that will contain token-->
<GridPane fx:controller="org.pinte.controllers.Warning"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!--configure the column of the grid-->
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Warning!!" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="3"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Rubik" size="24"/>
        </font>
        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Label>

    <!-- Add Message Label -->
    <Label text="Ãªtes vous sure de vouloir remplacer ce fichier ?" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="3"
           GridPane.rowSpan="8" GridPane.halignment="CENTER">
        <font>
            <Font name="Rubik" size="12"/>
        </font>
        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Label>

    <!-- Add Box containing Button -->
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="5">

        <!-- Add Cancel Button -->
        <Button text="Cancel" onAction="#cancel"
        />
        <Pane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>

        <HBox>
            <!-- Add Save Button -->
            <Button text="Save"
                   onAction="#replace" />
        </HBox>
    </HBox>


</GridPane>
