<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>


<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.pinte.controllers.New" alignment="center"
          hgap="10" vgap="10">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Nouveau document" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="3"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Rubik" size="24"/>
        </font>
        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Label>

    <Label text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="projectName"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Width:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="projectWidth"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Height:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="projectHeight"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Save location:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="4">
        <TextField fx:id="projectLocation" HBox.hgrow="ALWAYS"/>
        <Button text="Browse"
                onAction="#browse">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>
    </HBox>


    <HBox GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Cancel"
                onAction="#cancel"

        />
        <Pane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>

        <HBox>
            <Button text="Create"
                    onAction="#create">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>


            <Button text="Open"
                    onAction="#open"/>
        </HBox>
    </HBox>


</GridPane>
